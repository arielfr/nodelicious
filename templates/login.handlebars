{{#extend "main"}}
    {{#content "header" mode="append"}}
        <link rel="stylesheet" href="/css/login.css">
    {{/content}}
    {{#content "body"}}
        {{#extend "modules/navbar"}}{{/extend}}

        <div class="container">
            {{#if error}}
                <div class="row">
                    <div class="alert alert-danger" role="alert">
                        <span>{{error}}</span>
                    </div>
                </div>
            {{/if}}
            <div class="row">
                <div class="col-sm-1 col-md-3"></div>
                <div class="col-xs-12 col-sm-9 col-md-6">
                    <form action="/login/local" method="POST" class="well">
                        <legend>Log In</legend>

                        <div class="form-group">
                            <label for="f-username">Email</label>
                            <input id="f-username" type="email" name="email" class="form-control" placeholder="example@dominio.com" required>
                        </div>
                        <div class="form-group">
                            <label for="f-password">Password</label>
                            <input id="f-password" type="password" name="password" class="form-control" placeholder="password" required>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-raised btn-info" type="submit">LogIn</button>
                        </div>
                        <p class="text-center top10">
                            <a href="/register">Dont have an account</a> | <a href="#">Forgot my Password</a>
                        </p>
                    </form>
                </div>
                <div class="col-sm-1 col-md-3"></div>
            </div>
        </div>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script type="application/javascript" src="/js/login.js"></script>
    {{/content}}
{{/extend}}